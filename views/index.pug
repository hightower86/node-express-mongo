extends layout.pug
block content 
  h1 Todos Page
  ul
    each todo in todos
      li.todo
        form(action='/complete' method='POST')
          label
            input(type='checkbox' name='completed' checked= todo.completed)
            span(class=`${todo.completed? 'completed':''}`)= todo.title
            input(type='hidden' value= todo.id name='id')
            button(class='btn btn-small' type='submit') Save
    else
      p There are no todos